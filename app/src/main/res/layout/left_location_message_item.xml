<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="messageImage"
            type="String" />

        <variable
            name="messageModel"
            type="com.project.messagingapp.data.model.ChatRoom" />
    </data>

    <LinearLayout
        android:id="@+id/locationOpener"
        style="@style/VView"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="220dp"
        android:background="@drawable/shape_audio_background"
        tools:ignore="ContentDescription">

        <LinearLayout style="@style/LView">

            <RelativeLayout
                style="@style/WView">



                <ImageView
                    android:id="@+id/imf_left_location"
                    android:layout_centerInParent="true"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_location_on_24" />
            </RelativeLayout>

            <TextView
                android:id="@+id/horizantal_wave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                android:text="USER LOCATION"
                android:textSize="30dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_msg_time"
            style="@style/TxtRgStyle"
            android:textSize="16sp"
            android:textColor="@color/WHITE"/>

    </LinearLayout>
</layout>