<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LWView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VWView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LineLView">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/BackGround</item>
    </style>

    <style name="FView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FormPad" parent="FView">
        <item name="android:padding">15dp</item>
    </style>

    <style name="WLView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WVView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ScrollRoot" parent="FView">
        <item name="android:background">@color/WHITE</item>
        <item name="android:id">@id/view_root</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="StyleRoot" parent="Widget.Support.CoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/WHITE</item>
        <item name="android:id">@id/view_root</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="progressColor" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/BackGround</item>
    </style>


    <style name="StyleList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EdtOTPStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edit_back</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:fontFamily">@font/font_semi</item>-->
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="BtnClear">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/clear_btn</item>
        <item name="android:tint">@color/SecondColor</item>
    </style>

